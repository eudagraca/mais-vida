<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.AnuncioFragment"
    android:background="@color/md_white_1000"
    android:orientation="vertical">


    <android.support.design.widget.TabLayout
        android:id="@+id/tl_an_not"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabGravity="center"
        app:tabIndicatorColor="@color/vermelho_padrao"
        app:tabSelectedTextColor="@color/vermelho_padrao">

        <android.support.design.widget.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/anunciar" />

        <android.support.design.widget.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/notificacoes" />
    </android.support.design.widget.TabLayout>

    <FrameLayout
        android:id="@+id/fl_create"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>