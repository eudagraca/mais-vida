<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.AnuncioFragment">




    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/courgette"
            android:paddingStart="26dp"
            android:paddingEnd="26dp"
            android:text="@string/anunciar"
            android:textAlignment="center"
            android:textColor="@color/vermelho_padrao"
            android:textSize="35sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/product_r"
            android:paddingStart="27dp"
            android:paddingEnd="26dp"
            android:text="REQUISÇÃO DE SANGUE"
            android:textAlignment="center"
            android:textColor="@color/md_grey_900"
            android:textSize="15sp"
            android:textStyle="bold" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="26dp"
                android:paddingEnd="26dp"
                android:layout_marginTop="20dp"
                android:paddingBottom="18dp">


                <TextView
                    android:id="@+id/tv_quantidade"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/product_r"
                    android:textAlignment="textStart"
                    android:layout_marginTop="30dp"
                    android:textColor="@color/md_black_1000"
                    android:textSize="16sp" />

                <SeekBar
                    android:id="@+id/quantidade"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="5"
                    android:padding="10dp"
                    android:progressTint="@color/md_red_900" />

                <TextView
                    android:id="@id/tv_quantidade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/md_black_1000" />


                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/product_r"
                    android:text="Descrição (opcional)"
                    android:textAlignment="textStart"
                    android:textColor="@color/md_black_1000"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/tid_comentario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/product_r"
                    android:hint="Pode ser um comentario ou descrição da sua situação"
                    android:maxLength="200"
                    android:textSize="16sp">

                </EditText>


                <Button
                    android:id="@+id/btnDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/btn_shape"
                    android:fontFamily="@font/product_r"
                    android:paddingStart="30dp"
                    android:paddingTop="10dp"
                    android:paddingEnd="30dp"
                    android:paddingBottom="10dp"
                    android:text="@string/data_para_doacao"
                    android:textAllCaps="false"
                    android:textColor="@color/md_white_1000"
                    android:textSize="18sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/tvSelectedDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/md_black_1000"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/btn_anunciar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginLeft="26dp"
                    android:layout_marginRight="26dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/btn_shape"
                    android:fontFamily="@font/product_r"
                    android:paddingLeft="32dp"
                    android:paddingTop="10dp"
                    android:paddingRight="32dp"
                    android:paddingBottom="10dp"
                    android:text="@string/anunciar"
                    android:textAllCaps="false"
                    android:textColor="@color/md_white_1000"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/bt_update"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/fui_transparent"
                        android:layout_marginStart="80dp"
                        android:drawableStart="@drawable/ic_edit" />

                    <Button
                        android:id="@+id/bt_delete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/fui_transparent"
                        android:layout_marginStart="50dp"
                        android:drawableStart="@drawable/ic_dustbin" />


                </LinearLayout>






            </LinearLayout>
        </ScrollView>
    </LinearLayout>


</FrameLayout>