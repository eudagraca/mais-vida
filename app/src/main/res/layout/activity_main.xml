<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/vermelho_padrao"
    tools:context="mz.co.vida.activities.MainActivity"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:contentDescription="@string/logo"
            app:srcCompat="@drawable/ic_mais_vida_logo" />

        <TextView
            android:contentDescription="@string/doacao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:textSize="40sp"
            android:textStyle="bold"
            android:textColor="@color/md_white_1000"
            android:fontFamily="@font/courgette"
            android:text="@string/palavra_doacao"/>

        <com.codesgood.views.JustifiedTextView
            android:id="@+id/tv_justified_paragraph"
            android:layout_width="match_parent"
            android:fontFamily="@font/product_r"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:padding="10dp"
            android:text="@string/texto"
            android:textColor="@android:color/white"
            android:textSize="18sp" />


      <!--  <com.google.android.gms.common.SignInButton-->
          <!--  android:id="@+id/signInButton"-->
           <!-- android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_gravity="center"-->
            <!--android:layout_marginTop="100dp" />-->
        <Button
            android:id="@+id/bt"
            android:layout_width="22dp"
            android:layout_height="38dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/ic_next_1"
            android:backgroundTint="@color/md_white_1000" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>