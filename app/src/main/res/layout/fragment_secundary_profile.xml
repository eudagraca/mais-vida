<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/md_white_1000"
    tools:context=".Fragments.SecondProFrag">


    <android.support.v7.widget.CardView
        android:id="@+id/dd"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/vermelho_padrao">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@color/vermelho_padrao">>

                <Button
                    android:id="@+id/btn_back_vr"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="27dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="335dp"
                    android:background="@drawable/ic_back_white"
                    android:textAllCaps="false"
                    android:textColor="@color/md_white_1000"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/tv_nome"
                    android:layout_width="172dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="27dp"
                    android:fontFamily="@font/courgette"
                    android:text="Stelio Braga"
                    android:textColor="@color/md_white_1000"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/tv_estado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="27dp"
                    android:layout_marginTop="116dp"
                    android:layout_marginBottom="37dp"
                    android:fontFamily="@font/product_r"
                    android:text="Requisitante"
                    android:textColor="@color/md_white_1000"
                    android:textSize="21sp"
                    android:textStyle="bold" />

                <com.zcw.togglebutton.ToggleButton
                    android:id="@+id/tv_disponibilidade"
                    android:layout_width="54dp"
                    android:layout_height="30dp"
                    android:layout_alignEnd="@+id/iv_foto"
                    android:layout_alignBottom="@+id/tv_estado"
                    android:layout_marginEnd="119dp"
                    android:layout_marginBottom="0dp"
                    android:clickable="false"
                    app:tbBorderWidth="2dp"
                    app:tbOffBorderColor="@color/md_white_1000"
                    app:tbOffColor="@color/md_white_1000"
                    app:tbOnColor="@color/md_red_900"
                    app:tbSpotColor="@color/vermelho_padrao" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_foto"
                    android:layout_width="130dp"
                    android:layout_height="110dp"
                    android:layout_alignBottom="@+id/tv_estado"
                    android:layout_marginBottom="-2dp"
                    android:layout_toEndOf="@+id/tv_nome"
                    android:src="@drawable/ic_user" />

            </RelativeLayout>
        </ScrollView>

    </android.support.v7.widget.CardView>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginTop="120dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/infop"
                android:layout_width="358dp"
                android:layout_height="30dp"
                android:textStyle=""
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="27dp"
                android:text="@string/informa_o_pesoal"
                android:fontFamily="@font/product_r"
                android:textColor="@color/md_black_1000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/blood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/infop"
                android:layout_below="@+id/infop"
                android:layout_marginTop="4dp"
                android:drawableStart="@drawable/ic_blood"
                />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/infop"
                android:layout_alignTop="@+id/tv_Sexo"
                android:layout_below="@id/blood"
                android:layout_marginTop="4dp"
                android:drawableStart="@drawable/ic_genero" />



            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/textView15"
                android:layout_marginTop="17dp"
                android:background="@color/vermelho_padrao" />

            <TextView
                android:id="@+id/enderco"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/infop"
                android:fontFamily="@font/product_r"
                android:layout_below="@id/textView15"
                android:layout_marginTop="130dp"
                android:textColor="@color/md_black_1000"
                android:text="@string/endereco"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/infop"
                android:layout_below="@+id/enderco"
                android:layout_marginTop="160dp"
                android:drawableStart="@drawable/ic_localizacao" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/infop"
                android:layout_below="@id/textView5"
                android:layout_centerVertical="true"
                android:layout_marginTop="14dp"
                android:drawableStart="@drawable/ic_hospital" />


            <TextView
                android:id="@+id/tv_tiposanguineo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/infop"
                android:layout_alignStart="@+id/tv_contacto"
                android:layout_alignBottom="@+id/blood"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/product_r"
                android:text="O-"
                android:textColor="@color/md_black_1000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_provincia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/tv_unidade_sanitaria"
                android:layout_alignStart="@+id/tv_contacto"
                android:layout_alignTop="@+id/textView5"
                android:layout_marginBottom="15dp"
                android:fontFamily="@font/product_r"
                android:text="Cabo de Legado"
                android:textColor="@color/md_black_1000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_unidade_sanitaria"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/tv_contacto"
                android:layout_alignTop="@+id/textView6"
                android:fontFamily="@font/product_r"
                android:text="Hospital de Maputo"
                android:textColor="@color/md_black_1000"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/tv_Sexo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/tv_contacto"
                android:layout_alignParentTop="true"
                android:layout_marginTop="68dp"
                android:fontFamily="@font/product_r"
                android:text="Masculino"
                android:textColor="@color/md_black_1000"
                android:textSize="16sp" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/textView6"
                android:layout_marginTop="16dp"
                android:background="@color/vermelho_padrao" />

            <TextView
                android:id="@+id/ct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/infop"
                android:layout_below="@+id/textView6"
                android:layout_marginTop="30dp"
                android:text="@string/Contacto"
                android:fontFamily="@font/product_r"
                android:textColor="@color/md_black_1000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_contacto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/textView7"
                android:layout_marginStart="118dp"
                android:layout_toEndOf="@+id/textView7"
                android:fontFamily="@font/product_r"
                android:text="842323485"
                android:textColor="@color/md_black_1000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/infop"
                android:layout_below="@id/ct"
                android:layout_marginTop="4dp"
                android:drawableStart="@drawable/ic_celular" />


        </RelativeLayout>
    </ScrollView>


</FrameLayout>
